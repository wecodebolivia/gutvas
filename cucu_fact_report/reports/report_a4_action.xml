<odoo>
  <record id="paper_format_cucu_a4" model="report.paperformat">
    <field name="name">Cucu invoice A4</field>
    <field name="format">custom</field>
    <field name="page_height">280</field>
    <field name="page_width">215</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">10</field>
    <field name="margin_bottom">10</field>
    <field name="margin_left">2</field>
    <field name="margin_right">2</field>
    <field name="header_line" eval="False"/>
    <field name="header_spacing">0</field>
    <field name="dpi">120</field>
    <field name="disable_shrinking" eval="True"/>
  </record>

  <record id="action_report_cucu_a4" model="ir.actions.report">
    <field name="name">Factura A4</field>
    <field name="model">account.move</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">cucu_fact_report.cucu_report_a4</field>
    <field name="report_file">cucu_fact_report.cucu_report_a4</field>
    <field name="binding_model_id" ref="account.model_account_move"/>
    <field name="paperformat_id" ref="cucu_fact_report.paper_format_cucu_a4"/>
    <field name="attachment"/>
    <field name="binding_type">report</field>
  </record>

  <record id="account.account_invoices" model="ir.actions.report">
    <field name="name">Invoice Custom</field>
    <field name="report_name">cucu_fact_report.cucu_report_account</field>
    <field name="report_file">cucu_fact_report.cucu_report_account</field>
    <field name="paperformat_id" ref="cucu_fact_report.paper_format_cucu_a4"/>
  </record>
</odoo>