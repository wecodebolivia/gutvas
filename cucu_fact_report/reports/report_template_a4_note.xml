<odoo>
    <data>
        <template id="cucu_report_a4_note" inherit_id="cucu_fact_report.cucu_report_a4">
            <xpath expr="//div[@id='invoice_client_left']//table" position="inside">
                <tr>
                    <t t-if="header['doc_sector'] == 24">
                        <td class="font-semibold min-w-[180px] text-left pr-2 align-text-top" t-attf-style="color: #{o.company_id.color_primary};">
                            N° Factura
                        </td>
                        <td class="text-sm">
                            <div t-esc="header['numeroFactura']"/>
                        </td>
                    </t>
                </tr>
            </xpath>
            <xpath expr="//div[@id='invoice_client_right']//table" position="inside">
                <t t-if="header['doc_sector'] == 24">
                    <tr>
                        <td class="font-semibold min-w-[180px] text-left pr-2 align-text-top" t-attf-style="color: #{o.company_id.color_primary};">
                            Fecha factura:
                        </td>
                        <td class="text-sm">
                            <div t-esc="header['fechaEmisionFactura']"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="font-semibold min-w-[180px] text-left pr-2 align-text-top" t-attf-style="color: #{o.company_id.color_primary};">
                            N° Cuf:
                        </td>
                        <td class="text-sm break-all">
                            <div t-esc="header['numeroAutorizacionCuf']"/>
                        </td>
                    </tr>
                </t>
            </xpath>
            <xpath expr="//div[@id='invoice_sale']" position="before">
                <div id="invoice_note" t-if="header['doc_sector'] == 24" style="font-size:0.78rem;margin-top:0.75rem">
                    <div style="margin-bottom:0.5rem;font-size: 18px;">
                        <b t-attf-style="color: #{o.company_id.color_primary};">DATOS FACTURA ORIGINAL</b>
                    </div>
                    <table class="w-full border-collapse" cellspacing="0" cellpadding="0">
                        <thead t-attf-style="background: #{o.company_id.color_primary}; color: white">
                            <tr>
                                <th style="vertical-align: middle;" class="uppercase pr-1 font-semibold w-[13.5%]">Código producto</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[10.5%]">Cantidad</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[12%] text-center">Unidad de medida</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[26.5%]">Descripcion</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[12.5%] text-center">Precio Unitario</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[12.5%]">Descuento</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[12.5%]">Sub Total</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="detail" t-as="line">
                                <t t-if="line['codigoDetalleTransaccion'] == 1">
                                    <tr t-attf-style="border-bottom: 1px solid #{o.company_id.color_border} !important;">
                                        <td class="px-1 py-[2px] break-all" style="vertical-align: middle;">
                                            <div t-esc="line['codigoProducto']"/>
                                        </td>
                                        <td class="text-right px-1 py-[2px]" style="vertical-align: middle;">
                                            <div t-esc="line['cantidad']"/>
                                        </td>
                                        <td class="text-center px-1 py-[2px]" style="vertical-align: middle;">
                                            <div t-esc="line['unit_description']"/>
                                        </td>
                                        <td class="text-left px-1 py-[2px]" style="vertical-align: middle;">
                                            <div t-esc="line['descripcion']"/>
                                        </td>
                                        <td class="text-right px-1 py-[2px]" style="vertical-align: middle;">
                                            <div t-esc="line['precioUnitario']"/>
                                        </td>
                                        <td class="text-right px-1 py-[2px]" style="vertical-align: middle;">
                                            <div t-esc="line['montoDescuento']"/>
                                        </td>
                                        <td class="text-right py-[2px] pl-1" style="vertical-align: middle;">
                                            <div t-esc="line['subTotal']"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>

                        <tfoot>

                            <tr>
                                <td/>
                                <td/>
                                <td/>
                                <td colspan="3" class="text-right py-1 font-semibold"
                                    t-attf-style="border-bottom: 1px solid #{o.company_id.color_border} !important; background: #{o.company_id.color_shadow};color: #{o.company_id.color_primary};">
                                    MONTO TOTAL ORIGINAL Bs.
                                </td>
                                <td class="py-1 text-right"
                                    t-attf-style="border-bottom: 1px solid #{o.company_id.color_border} !important; background: #{o.company_id.color_shadow};color: #{o.company_id.color_primary};">
                                    <div class="font-semibold" t-esc="header['montoTotalOriginal']"/>
                                </td>
                            </tr>

                        </tfoot>
                    </table>
                    <div style="margin-bottom:0.5rem;margin-top:1rem">
                        <b t-attf-style="color: #{o.company_id.color_primary};font-size: 18px;">DETALLE DE LA DEVOLUCIÓN O RESCISIÓN</b>
                    </div>
                    <table class="w-full border-collapse" cellspacing="0" cellpadding="0">
                        <thead t-attf-style="background: #{o.company_id.color_primary}; color: white">
                            <tr>
                                <th style="vertical-align: middle;" class="uppercase pr-1 font-semibold w-[13.5%]">Código producto</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[10.5%]">Cantidad</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[12%] text-center">Unidad de medida</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[26.5%]">Descripcion</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[12.5%] text-center">Precio Unitario</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[12.5%]">Descuento</th>
                                <th style="vertical-align: middle;" class="uppercase p-1 font-semibold w-[12.5%]">Sub Total</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="detail" t-as="line">
                                <t t-if="line['codigoDetalleTransaccion'] == 2">
                                    <tr t-attf-style="border-bottom: 1px solid #{o.company_id.color_border} !important;">
                                        <td class="px-1 py-[2px] break-all" style="vertical-align: middle;">
                                            <div t-esc="line['codigoProducto']"/>
                                        </td>
                                        <td class="text-right px-1 py-[2px]" style="vertical-align: middle;">
                                            <div t-esc="line['cantidad']"/>
                                        </td>
                                        <td class="text-center px-1 py-[2px]" style="vertical-align: middle;">
                                            <div t-esc="line['unit_description']"/>
                                        </td>
                                        <td class="text-left px-1 py-[2px]" style="vertical-align: middle;">
                                            <div t-esc="line['descripcion']"/>
                                        </td>
                                        <td class="text-right px-1 py-[2px]" style="vertical-align: middle;">
                                            <div t-esc="line['precioUnitario']"/>
                                        </td>
                                        <td class="text-right px-1 py-[2px]" style="vertical-align: middle;">
                                            <div t-esc="line['montoDescuento']"/>
                                        </td>
                                        <td class="text-right py-[2px] pl-1" style="vertical-align: middle;">
                                            <div t-esc="line['subTotal']"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td/>
                                <td/>
                                <td/>
                                <td colspan="3" class="text-right py-1" t-attf-style="border-bottom: 1px solid #{o.company_id.color_border} !important;">
                                    MONTO TOTAL DEVUELTO Bs.
                                </td>
                                <td class="py-1 text-right" t-attf-style="border-bottom: 1px solid #{o.company_id.color_border} !important;">
                                    <div t-esc="header['montoTotalDevuelto']"/>
                                </td>
                            </tr>
                            <tr>
                                <td/>
                                <td/>
                                <td/>
                                <td colspan="3" class="text-right py-1"
                                    t-attf-style="border-bottom: 1px solid #{o.company_id.color_border} !important; background: #{o.company_id.color_shadow};color: #{o.company_id.color_primary};">
                                    <b>MONTO EFECTIVO DEBITO-CRÉDITO Bs.</b>
                                </td>
                                <td class="text-right py-1"
                                    t-attf-style="border-bottom: 1px solid #{o.company_id.color_border} !important; background: #{o.company_id.color_shadow};color: #{o.company_id.color_primary};">
                                    <div class="font-semibold" t-esc="header['montoEfectivoCreditoDebito']"/>
                                </td>
                            </tr>
                            <tr>
                                <td rowspan="2" colspan="4">
                                    <b>Son:</b>
                                    <t t-esc="header['montoLiteral']"/>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </xpath>
        </template>
    </data>
</odoo>