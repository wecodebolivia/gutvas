<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_book_wizard_form" model="ir.ui.view">
        <field name="name">sale.book.wizard.form</field>
        <field name="model">sale.book.wizard</field>
        <field name="arch" type="xml">
            <form string="Libro de Ventas">
                <group>
                    <field name="fecha_inicio"/>
                    <field name="fecha_fin"/>
                    <field name="company_id"/>
                </group>
                <footer>
                    <button name="generar_excel" string="Generar Excel" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_book_wizard" model="ir.actions.act_window">
        <field name="name">Libro de Ventas V2</field>
        <field name="res_model">sale.book.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sale_book_v2"
              name="Libro de Ventas V2"
              parent="account.menu_finance_reports"
              action="action_sale_book_wizard"
              sequence="99"/>

</odoo>
