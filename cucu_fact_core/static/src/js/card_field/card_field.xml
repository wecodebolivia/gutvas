<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="cucu_fact_core.CardField">
        <div class="d-inline-flex w-100">
            <t t-if="props.readonly">
                <span t-esc="formattedValueCard"/>
            </t>
            <t t-else="">
                <div class="d-inline-flex w-100">
                    <input
                            class="o_input w-50 d-none"
                            t-att-id="props.id"
                            type="text"
                            autocomplete="off"
                            placeholder="0000"
                            t-att-required="props.required"
                            t-ref="input"
                    />
                    <input
                            class="o_input w-25 text-center"
                            t-att-id="props.id"
                            type="text"
                            autocomplete="off"
                            placeholder="4444"
                            t-att-required="props.required"
                            t-model="state.input_left"
                            t-on-change="onChange"
                            t-on-blur="onBlur"
                            minlength="4" maxlength="4"
                    />
                     <div class="w-25 text-center">XXXXXXXX</div>
                    <input
                            class="o_input w-25 text-center"
                            t-att-id="props.id"
                            type="text"
                            autocomplete="off"
                            placeholder="3333"
                            t-att-required="props.required"
                            t-model="state.input_right"
                            t-on-change="onChange"
                            t-on-blur="onBlur"
                            minlength="4" maxlength="4"
                    />
                </div>
            </t>
        </div>
    </t>
</templates>
