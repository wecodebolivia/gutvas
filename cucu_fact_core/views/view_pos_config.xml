<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.form.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//div[@id='title']" position="after">
                <div class="row mt16 o_settings_container">
                    <setting string="FacturaciÃ³n en Linea"
                         help="  Datos para emitir la factura">
                    <field name="is_cucu_invoice"/>
                    <div class="content-group mt16" invisible="not is_cucu_invoice">
                        <div class="row">
                            <label for="cucu_pos_id" string="Pos ID" class="col-lg-4 o_light_label"/>
                            <field name="cucu_pos_id"
                                   domain="[('company_id','=', allowed_company_ids[0])]"
                                   options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"
                                   widget="many2one" required="is_cucu_invoice == True"/>
                        </div>
                        <div class="row">
                            <label for="cucu_city" string="Ciudad" class="col-lg-4 o_light_label"/>
                            <field name="cucu_city" required="is_cucu_invoice == True"/>
                        </div>
                    </div>
                </setting>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

