<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="cucu_event_view_form" model="ir.ui.view">
    <field name="name">cucu.event.view.form</field>
    <field name="model">cucu.event</field>
    <field name="arch" type="xml">
      <form string="Eventos Significativos" duplicate="0">
        <header>
          <button name="get_create_event" type="object" string="Off-Line" class="oe_highlight" invisible = "is_offline != True"/>
          <button name="get_end_event" type="object" string="On-Line" class="oe_highlight" invisible = "is_online != True"/>
        </header>
        <sheet>
          <group>
            <field name="is_save" invisible="1"/>
            <field name="is_online" invisible="1"/>
            <field name="is_offline" invisible="1"/>
            <field name="pos_config_id" widget="many2one" readonly = "is_save != False"            
                   options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" required="1"/>
            <field name="code_motive" widget="many2one" readonly = "is_save != False"
                   options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" required="1"/>
            <field name="description" required="1" readonly = "is_save != False"/>
            <field name="date_init_event" readonly = "event_code != False" />
            <field name="date_end_event" readonly = "event_code != False"/>
          </group>
          <notebook>
            <page string="Estado evento">
              <group string="Offline">
                <field name="description_motive" readonly="1"/>
                <field name="date_init_event" readonly="1"/>
                <field name="cuf_event" readonly="1"/>
                <field name="event_code" readonly="1"/>
                <field name="control_code_event" readonly="1"/>
                <field name="cafc" readonly="1"/>
              </group>
              <group string="Online">
                <field name="siat_status" readonly="1"/>
                <field name="siat_status_description" readonly="1"/>
                <field name="siat_code_reception" readonly="1"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="cucu_event_view_tree" model="ir.ui.view">
    <field name="name">cucu.event.view.form</field>
    <field name="model">cucu.event</field>
    <field name="arch" type="xml">
      <tree string="Eventos">
        <field name="id"/>
        <field name="code_motive"/>
        <field name="cuf_event"/>
        <field name="description"/>
      </tree>
    </field>
  </record>


  <record id="action_cucu_event_form" model="ir.actions.act_window">
    <field name="name">Eventos Significativos</field>
    <field name="res_model">cucu.event</field>
    <field name="view_mode">tree,form</field>
    <!--        <field name="domain">[('company_id','=', allowed_company_ids[0])]</field>-->
  </record>

  <menuitem id="menu_action_account_invoice_event" name="Eventos Significativos" sequence="10" parent="account.menu_finance_reports"
            groups="account.group_account_invoice,account.group_account_readonly">
    <menuitem id="menu_sector_bol_form" action="action_cucu_event_form" sequence="1"/>
  </menuitem>
</odoo>