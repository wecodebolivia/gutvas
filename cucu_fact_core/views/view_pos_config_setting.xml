<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_setting_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.setting.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app//block[@id='pos_payment_section']" position="before">
                <block title="Fact Invoice Config" id="fact_invoice">
                    <setting help="Config Invoice Pos Sync - Api Token">
                        <field name="is_cucu_invoice"/>
                        <div class="content-group" invisible="not is_cucu_invoice">
                            <div class="row mt16">
                                <label string="Point Of Sale" for="cucu_pos_id" class="col-lg-4 o_light_label"
                                       options="{'no_open': True, 'no_create': True}"/>
                                <field name="cucu_pos_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"
                                       widget="many2one" required="is_cucu_invoice == True"/>
                            </div>
                            <div class="row mt16">
                                <div class="col">
                                    <label for="cucu_city" class="col-lg-4 o_light_label"/>
                                    <field name="cucu_city" required="is_cucu_invoice == True"/>
                                </div>
                            </div>
                            <div class="row mt16" invisible="1">
                                <div class="col">
                                    <label for="doc_sector_id" class="col-lg-4 o_light_label"/>
                                    <field name="doc_sector_id"/>
                                </div>
                            </div>
                            <div class="row mt16" invisible="1">
                                <div class="col">
                                    <label for="manager_id" class="col-lg-4 o_light_label"/>
                                    <field name="manager_id"/>
                                </div>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
