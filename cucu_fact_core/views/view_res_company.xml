<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cucu_config_form_inherit" model="ir.ui.view">
        <field name="name">view.cucu.config.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//page[1]" position="after">
                <page string="Cucu Config (BO)">
                    <group string="Config invoice style">
                        <group>
                            <field name="color_primary" string="Color Primary" widget="color"/>
                            <field name="color_border" string="Color Border" widget="color"/>
                            <field name="color_shadow" string="Color Shadow" widget="color"/>
                        </group>
                        <group>
                            <field name="water_mark" widget="image" width="100"/>
                            <field name="water_mark_width"/>
                            <field name="water_mark_top"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>