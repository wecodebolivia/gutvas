<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cucu_manager_form" model="ir.ui.view">
            <field name="name">view.cucu.manager.form</field>
            <field name="model">cucu.manager</field>
            <field name="arch" type="xml">
                <form duplicate="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button oe_highlight" name="token_renew" type="object"
                                    icon="fa-key">Renew Token
                            </button>
                            <button class="oe_stat_button oe_highlight" name="action_sync_branch_office" type="object"
                                    icon="fa-refresh">Sync Branch
                            </button>
                            <button class="oe_stat_button oe_highlight" name="open_view_cucu_branch" type="object"
                                    icon="fa-building-o">Branch Office
                            </button>
                            <button class="oe_stat_button oe_highlight btn-outline-success" name="sync_catalog" type="object"
                                    icon="fa-database text-success">Sync Catalog
                            </button>
                        </div>
                        <group>
                            <field name="host"/>
                            <field name="username"/>
                            <field name="password" password="1"/>
                            <field name="token" readonly="1" invisible="1"/>
                            <field name="doc_sector_id"/>
                            <field name="is_send_email"/>
                            <field name="is_electronic"/>
                            <field name="is_ticket"/>
                            <field name="exchange_rate"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </sheet>
                    <chatter reload_on_attachment="True"/>
                </form>
            </field>
        </record>

        <record id="view_cucu_manager_list" model="ir.ui.view">
            <field name="name">view.cucu.manager.list</field>
            <field name="model">cucu.manager</field>
            <field name="arch" type="xml">
                <list string="Manager Api" create="1" export_xlsx="0" delete="0">
                    <field name="host"/>
                    <field name="username"/>
                    <field name="doc_sector_id"/>
                    <field name="is_electronic"/>
                    <field name="company_id" optional="1"/>
                </list>
            </field>
        </record>

        <record id="action_cucu_manager" model="ir.actions.act_window">
            <field name="name">Cucu Manager</field>
            <field name="res_model">cucu.manager</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('company_id','=', allowed_company_ids[0])]</field>
        </record>
    </data>
</odoo>