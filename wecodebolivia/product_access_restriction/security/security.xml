<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_product_full" model="res.groups">
        <field name="name">Full Rights for Products</field>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="product_limit_access" model="ir.rule">
        <field name="name" >Limit Access Users to Products</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force"> [('active','=',True),('active','=',False)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>        
    </record>
    <record id="product_product_limit_access" model="ir.rule">
        <field name="name" >Limit Access Users to Products Variants</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force"> [('active','=',True),('active','=',False)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>        
    </record>
    <record id="product_attribute_limit_access" model="ir.rule">
        <field name="name" >Limit Access Users to Products Attributes</field>
        <field name="model_id" ref="product.model_product_attribute"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force"> [('sequence','=',0),('sequence','=',1)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>        
    </record>
    <record id="product_attribute_value_limit_access" model="ir.rule">
        <field name="name" >Limit Access Users to Products Attributes Values</field>
        <field name="model_id" ref="product.model_product_attribute_value"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force"> [('sequence','=',0),('sequence','=',1)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>        
    </record>
    <record id="product_template_attribute_value_limit_access" model="ir.rule">
        <field name="name" >Limit Access Users to Template Attributes Values</field>
        <field name="model_id" ref="product.model_product_template_attribute_value"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <!-- Just unreal domain force -->
        <field name="domain_force"> [('ptav_active','=',True),('ptav_active','=',False)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>        
    </record>

    <record id="product_comp_rule" model="ir.rule">
        <field name="name">Full Rights for Products</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="groups" eval="[(4, ref('product_access_restriction.group_product_full'))]"/>
        <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="product_product_comp_rule" model="ir.rule">
        <field name="name">Full Rights for Products Variants</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="groups" eval="[(4, ref('product_access_restriction.group_product_full'))]"/>
        <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="product_attribute_comp_rule" model="ir.rule">
        <field name="name">Full Rights for Products Attributes</field>
        <field name="model_id" ref="product.model_product_attribute"/>
        <field name="groups" eval="[(4, ref('product_access_restriction.group_product_full'))]"/>
        <field name="domain_force">[(1, "=", 1)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="product_attribute_value_comp_rule" model="ir.rule">
        <field name="name">Full Rights for Products Attributes Values</field>
        <field name="model_id" ref="product.model_product_attribute_value"/>
        <field name="groups" eval="[(4, ref('product_access_restriction.group_product_full'))]"/>
        <field name="domain_force">[(1, "=", 1)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="product_template_attribute_value_comp_rule" model="ir.rule">
        <field name="name">Full Rights for Template Attributes Values</field>
        <field name="model_id" ref="product.model_product_template_attribute_value"/>
        <field name="groups" eval="[(4, ref('product_access_restriction.group_product_full'))]"/>
        <field name="domain_force">[(1, "=", 1)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
