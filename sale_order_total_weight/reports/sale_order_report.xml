<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Heredar el template del documento de venta para agregar peso total -->
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            
            <!-- Buscar la tabla de totales y agregar el peso despuÃ©s -->
            <xpath expr="//div[hasclass('clearfix')]" position="inside">
                <div class="row" style="margin-top: 5px;">
                    <div class="col-8 text-end">
                        <strong>Total Weight:</strong>
                    </div>
                    <div class="col-4 text-end">
                        <strong>
                            <span t-esc="'%.2f' % doc.total_weight"/> kg
                        </strong>
                    </div>
                </div>
            </xpath>
            
        </template>

    </data>
</odoo>
