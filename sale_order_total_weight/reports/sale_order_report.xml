<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Heredar el template del documento de venta para agregar peso total -->
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            
            <!-- Agregar peso total con mejor presentaciÃ³n -->
            <xpath expr="//div[hasclass('page')]" position="inside">
                <div class="clearfix"/>
                <div class="row" style="page-break-inside: avoid; margin-top: 10px; margin-bottom: 10px;">
                    <div class="col-6">
                        <table class="table table-sm" style="width: 100%;">
                            <tr>
                                <td style="border: none; padding: 5px;">
                                    <strong>Peso Total:</strong>
                                </td>
                                <td style="border: none; padding: 5px; text-align: left;">
                                    <strong><span t-esc="'%.2f' % doc.total_weight"/> kg</strong>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </xpath>
            
        </template>

    </data>
</odoo>