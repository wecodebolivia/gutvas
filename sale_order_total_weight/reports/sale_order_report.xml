<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Heredar el template del documento de venta para agregar peso total -->
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            
            <!-- Agregar peso total antes de tÃ©rminos y condiciones (note) en el lado izquierdo -->
            <xpath expr="//p[@t-field='doc.note']" position="before">
                <div class="row" style="page-break-inside: avoid;">
                    <div class="col-6">
                        <p>
                            <strong>Peso Total:</strong>
                            <span t-esc="'%.2f' % doc.total_weight"/> kg
                        </p>
                    </div>
                </div>
            </xpath>
            
        </template>

    </data>
</odoo>