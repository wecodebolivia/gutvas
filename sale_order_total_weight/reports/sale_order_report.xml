<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Heredar el template del documento de venta para agregar peso total -->
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            
            <!-- Agregar peso total como fila adicional al final de la tabla principal -->
            <xpath expr="//tbody[hasclass('sale_tbody')]" position="after">
                <tfoot>
                    <tr>
                        <td colspan="3" style="text-align: right; padding: 8px; border-top: 1px solid #dee2e6;">
                            <strong>Peso Total:</strong>
                        </td>
                        <td style="text-align: right; padding: 8px; border-top: 1px solid #dee2e6;">
                            <strong><span t-esc="'%.2f' % doc.total_weight"/> kg</strong>
                        </td>
                    </tr>
                </tfoot>
            </xpath>
            
        </template>

    </data>
</odoo>