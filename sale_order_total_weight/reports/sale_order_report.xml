<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Heredar el template del documento de venta para agregar peso total -->
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            
            <!-- Agregar peso total en la tabla de totales, antes del subtotal -->
            <xpath expr="//table[@style='width: 100%; margin-top: 10px;']//tr[1]" position="before">
                <tr>
                    <td style="width: 75%; text-align: left; padding-left: 10px;">
                        <strong>Peso Total:</strong> <span t-esc="'%.2f' % doc.total_weight"/> kg
                    </td>
                    <td style="text-align: right;">
                    </td>
                </tr>
            </xpath>
            
        </template>

    </data>
</odoo>