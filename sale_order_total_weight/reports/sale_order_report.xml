<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Heredar el template del documento de venta para agregar peso total -->
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            
            <!-- Agregar peso total después de la tabla de líneas de venta -->
            <xpath expr="//table[@name='invoice_line_table']" position="after">
                <div class="row mt-2" style="page-break-inside: avoid;">
                    <div class="col-6">
                        <p class="mb-0">
                            <strong>Peso Total:</strong>
                            <span t-esc="'%.2f' % doc.total_weight"/> kg
                        </p>
                    </div>
                </div>
            </xpath>
            
        </template>

    </data>
</odoo>