<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista heredada para agregar el campo de peso total -->
        <record id="view_order_form_total_weight" model="ir.ui.view">
            <field name="name">sale.order.form.total.weight</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar el campo de peso total despuÃ©s del campo de monto total -->
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="total_weight" 
                           widget="float" 
                           options="{'digits': [16, 2]}" 
                           readonly="1"/>
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>
