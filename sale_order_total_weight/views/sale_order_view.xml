<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista heredada para agregar el campo de peso total en cotizaciones -->
        <record id="view_order_form_total_weight" model="ir.ui.view">
            <field name="name">sale.order.form.total.weight</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar campo de peso total antes de tÃ©rminos y condiciones -->
                <xpath expr="//field[@name='note']" position="before">
                    <group>
                        <group>
                            <field name="total_weight" 
                                   string="Peso Total"
                                   widget="float"
                                   readonly="1"/> 
                        </group>
                        <group/>
                    </group>
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>