<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_catalog_activities_tree" model="ir.ui.view">
      <field name="name">view.catalog.activities.tree</field>
      <field name="model">cucu.catalogs.activities</field>
      <field name="arch" type="xml">
        <list string="Activities" create="0" export_xlsx="0" delete="0" edit="1">
          <header>
            <button name="action_catalog_active" string="Actives" class="btn-primary" type="object"/>
          </header>
          <field name="code_type" string="Code type" readonly="1"/>
          <field name="description" string="description" readonly="1"/>
          <field name="is_visible" string="Active" widget="boolean_toggle"/>
        </list>
      </field>
    </record>

    <record id="action_view_catalog_activities" model="ir.actions.act_window">
      <field name="name">Catalog Activities</field>
      <field name="res_model">cucu.catalogs.activities</field>
      <field name="view_mode">list</field>
      <field name="domain">[('company_id','=', allowed_company_ids[0])]</field>
    </record>
  </data>
</odoo>