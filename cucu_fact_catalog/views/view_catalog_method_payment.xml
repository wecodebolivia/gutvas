<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_catalog_method_payment_tree" model="ir.ui.view">
      <field name="name">view.catalog.method.payment.tree</field>
      <field name="model">cucu.catalogs.payment.method</field>
      <field name="arch" type="xml">
        <list string="Payment method" create="0" export_xlsx="0" delete="0" edit="1">
          <header>
            <button name="action_catalog_actives" string="Actives" class="btn-primary" type="object"/>
          </header>
          <field name="code_type" readonly="1"/>
          <field name="description" readonly="1"/>
          <field name="is_visible" string="Active" widget="boolean_toggle" />
        </list>
      </field>
    </record>

    <record id="action_view_catalog_method_payment" model="ir.actions.act_window">
      <field name="name">Catalog Method Payment</field>
      <field name="res_model">cucu.catalogs.payment.method</field>
      <field name="view_mode">list</field>
      <field name="domain">[('company_id','=', allowed_company_ids[0])]</field>
    </record>
  </data>
</odoo>