<record id="view_move_tree_inherit_purchase_book" model="ir.ui.view">
    <field name="name">account.move.tree.inherit.purchase.book</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_tree"/>
    <field name="arch" type="xml">

      
        <xpath expr="//field[@name='invoice_line_ids']//tree" position="attributes">
            <attribute name="multi_edit">1</attribute>
        </xpath>

        <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='exclude_from_invoice_tab']" position="attributes">
            <attribute name="optional">hide</attribute>
        </xpath>

        <!-- Esto sí está bien orientado -->
        <xpath expr="//page[@name='other_invoice']" position="after">
            <page string="Libro Compras" name="lc_page">
                <group>
                    <group>
                        <field name="lc_razon_social"/>
                        <field name="lc_nit"/>
                        <field name="lc_nro_factura"/>
                        <field name="lc_nro_dui"/>
                        <field name="lc_nro"/>
                    </group>
                </group>
            </page>
        </xpath>
    </field>
</record>
