<!-- Extension module for cucu_fact_report -->
<odoo>
    <data>
        <!-- Extensión del reporte ticket para ocultar descripción -->
        <template id="ticket_hide_description" inherit_id="cucu_fact_report.cucu_report_ticket">
            
            <!-- Ocultar la descripción del producto en el ticket -->
            <xpath expr="//div[@id='invoice_sale']//table[@name='invoice_line_table']//tbody//tr//div//div[@class='font-semibold']" position="attributes">
                <attribute name="style">display: none;</attribute>
            </xpath>
            
        </template>
    </data>
</odoo>
