<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Heredar la vista del formulario de branch office para permitir editar el campo address -->
        <record id="view_branch_office_form_ext" model="ir.ui.view">
            <field name="name">view.branch.office.form.ext</field>
            <field name="model">cucu.branch.office</field>
            <field name="inherit_id" ref="cucu_fact_core.view_branch_office_form"/>
            <field name="arch" type="xml">
                <!-- Cambiar el atributo edit del form a 1 para permitir ediciÃ³n -->
                <xpath expr="//form" position="attributes">
                    <attribute name="edit">1</attribute>
                </xpath>
                
                <!-- Hacer readonly los campos que no deben editarse -->
                <xpath expr="//field[@name='branch_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='siat_code']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='municipality']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='description']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
